@using GameChanger.Core.Debugging;
@inject Log Logger

<AuthorizeView>
    <Authorized>
        <div class="top-row pl-4 navbar navbar-dark">
            <a class="navbar-brand" href="">GameChanger</a>
            <button class="navbar-toggler" @onclick="ToggleNavMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
            <ul class="nav flex-column">
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="index" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> Home
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="map">
                        <span class="oi oi-map" aria-hidden="true"></span> Map
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="buildings">
                        <span class="oi oi-home" aria-hidden="true"></span> Town
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" @onclick="() => Logger.Messages.Clear()">
                        <span class="oi oi-clock" aria-hidden="true"></span> Clear Logs
                    </NavLink>
                </li>

                <li class="nav-item px-3">
                    <div class="nav-link">
                        <form method="get" action="LogoutPage">
                            <span class="oi oi-account-logout" aria-hidden="true"></span>
                            <button type="submit" class="nav-link btn btn-link">Log out</button>
                        </form>
                    </div>
                </li>
            </ul>
        </div>
    </Authorized>
    <NotAuthorized>
        <p>Dupsko</p>
    </NotAuthorized>
</AuthorizeView>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}
